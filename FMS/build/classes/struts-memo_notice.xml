		<action name="memoNoticeAction" class="com.trimax.its.memo.action.MemoAction" method="insertData">
    	 <result name="success"  type="tiles">memolist</result>
    </action>
    <action name="memoListAction" class="com.trimax.its.memo.action.MemoAction"></action>
    
      <action name="createMemoAction" class="com.trimax.its.memo.action.MemoAction" method="createMemo">
			<result name="success" type="tiles">creatememo</result>
	</action>
    
    	<action name="createMemoNoticeAction" class="com.trimax.its.memo.action.MemoAction" method="addMemoNotice">
			<result name="success" type="tiles">memoAdd</result>
			<result name="input" type="tiles">creatememo</result> 
		</action>
		
		<action name="deleteMemoNotice" class="com.trimax.its.memo.action.MemoAction" method="deleteMemoAction">
			<result name="success" type="tiles">memoAdd</result>
		</action>
		
		
		<action name="ModifyMemoNoticeDetails" class="com.trimax.its.memo.action.MemoAction" method="editMemo">
			<result name="success" type="tiles">memoEdit</result>
		</action>
  <action name="addEditedMemo" class="com.trimax.its.memo.action.MemoAction" method="addeditedMemo">
			<result name="success" type="tiles">memolist</result>
			<result name="input" type="tiles">memoEdit</result>
		</action>
  
 
  


	</package>
</struts>
